<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:padding="16dp">

    <!-- City Display / Change Button -->
    <LinearLayout
        android:id="@+id/cityBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Selected City"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#004494"/>

        <Button
            android:id="@+id/btnChangeCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change City"
            android:background="@drawable/button_primary"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Menu Buttons -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/cityBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="4dp">

            <Button
                android:id="@+id/btnLiveDepartures"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Live Departures"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnRoutesLines"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Routes And Lines"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="4dp">

            <Button
                android:id="@+id/btnTripPlanner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trip Planner"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnTickets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tickets And Passes"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="4dp">

            <Button
                android:id="@+id/btnNearbyStops"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nearby Stops"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary"
                android:layout_margin="4dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
